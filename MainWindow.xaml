<Window x:Class="GestionDePedidos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionDePedidos"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Clientes"/>
            <DataGrid x:Name="gridClientes"  IsReadOnly="True" ToolTip="doble click sobre el cliente para editar" MouseDoubleClick="gridClientes_MouseDoubleClick" CanUserAddRows="False" Width="380"  Height="150" SelectionChanged="gridClientes_SelectionChanged"/>
            <TextBlock Text="Pedidos"/>
            <DataGrid x:Name="gridPedidos" IsReadOnly="True" CanUserAddRows="False" Height="150" Width="600"/>
            <Button Content="Borrar Pedido" Width="100" Height="50" Click="Button_Click"/>



        </StackPanel>
    </Grid>
</Window>
